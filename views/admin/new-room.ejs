<% layout("layouts/boilerplate.ejs") %>
<link rel="stylesheet" href="/css/setup.css" />

<div class="mt-3">
  <div class="form-heading">
    <div>
      <h1 class="new-heading">Create a new room</h1>
    </div>
    <div>
      <img src="/assets/new-room.svg" height="200px" alt="image" />
    </div>
  </div>

  <div class="form-container">
    <form method="POST" action="/admin/new-room" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="form-section mb-3">
        <label for="input1" class="form-label mb-3">
          <h5 class="custom-label">room type</h5>
        </label>
        <input type="text" class="form-control custom-input" id="input1" name="room[roomType]" placeholder="Enter room type" required />
        <div class="valid-feedback"></div>
        <div class="invalid-feedback">Invalid room type</div>
      </div>

      <div class="group-input">

        <div class="form-section mb-3 item">
          <label for="input3" class="form-label mb-3">
            <h5 class="custom-label">Number of guests<i class="fa-solid fa-people-group new-icon"></i></h5>
          </label>
          <input type="number" id="input3" class="form-control custom-input" name="room[guest]" placeholder="0" required />
          <div class="valid-feedback"></div>
          <div class="invalid-feedback">Invalid guests number</div>
        </div>

        <div class="form-section mb-3 item">
          <label for="input4" class="form-label mb-3">
            <h5 class="custom-label">Number of bedrooms <i class="fa-solid fa-bed new-icon"></i></h5>
          </label>
          <input type="number" id="input4" class="form-control custom-input" name="room[bedroom]" placeholder="0" required />
          <div class="valid-feedback"></div>
          <div class="invalid-feedback">Invalid bedrooms number</div>
        </div>

        <div class="form-section mb-3 item">
          <label class="form-label mb-3" for="inputGroupSelect01">
            <h5 class="custom-label">Bed type<img src="/assets/bed.png" class="mx-2" alt="bed-image" height="25px" /></h5>
          </label>
          <select class="form-select custom-input" id="inputGroupSelect01" name="room[bed]" required>
            <option selected>Choose...</option>
            <option value="Single Bed">Single Bed</option>
            <option value="Double Bed">Double Bed</option>
            <option value="Queen Bed">Queen Bed</option>
            <option value="King Bed">King Bed</option>
            <option value="Twin Beds">Twin Beds</option>
          </select>
          <div class="valid-feedback"></div>
          <div class="invalid-feedback">Invalid bed type</div>
        </div>
      </div>

      <div class="form-section mb-3">
        <div class="mb-5">
          <label for="imageInput1" class="form-label mb-5">
            <h5 class="custom-label">
              Upload first image<i class="fa-regular fa-image new-icon"></i>
            </h5>
          </label>
          <div>
            <div>
              <img src="" height="200px" width="320px" class="rounded d-hidden" id="previewImage1" />
            </div>
            <div>
              <input type="file" id="imageInput1" class="form-control custom-input" name="room[roomImage]" required />
            </div>
          </div>
        </div>

        <div class="mb-5">
          <label for="imageInput2" class="form-label mb-5">
            <h5 class="custom-label">
              Upload second image<i class="fa-regular fa-image new-icon"></i></h5>
          </label>
          <div>
            <div>
              <img src="" height="200px" width="320px" class="rounded d-hidden" id="previewImage2" />
            </div>
            <div>
              <input type="file" id="imageInput2" class="form-control custom-input" name="room[roomImage]" required />
            </div>
          </div>
        </div>

        <div>
          <label for="imageInput3" class="form-label mb-5">
            <h5 class="custom-label">
              Upload third image<i class="fa-regular fa-image new-icon"></i></h5>
          </label>
          <div>
            <div>
              <img src="" height="200px" width="320px" class="rounded d-hidden" id="previewImage3" />
            </div>
            <div>
              <input type="file" id="imageInput3" class="form-control custom-input" name="room[roomImage]" required />
            </div>
          </div>
        </div>

        <div class="valid-feedback"></div>
        <div class="invalid-feedback">Invalid room images</div>
      </div>

      <div class="form-section mb-3 item">
        <label for="input6" class="form-label mb-3">
          <h5 class="custom-label">Price<i class="fa-solid fa-indian-rupee-sign new-icon"></i></h5>
        </label>
        <div class="input-group">
          <span class="input-group-text" id="basic-addon1"><b>Rs.</b></span>
          <input type="number" id="input6" class="form-control price-input" name="room[price]" placeholder="Enter price" required />
          <span class="input-group-text" id="basic-addon1"><b>per night</b></span>
        </div>
        <div class="valid-feedback"></div>
        <div class="invalid-feedback">Invalid price</div>
      </div>
      <div class="new-btn-div">
        <button type="submit" class="btn btn-lg hotelhub-btn-red">Create room</button>
        <a class="btn btn-lg btn-outline-dark" href="/admin/dashboard">Cancel</a>
      </div>
    </form>
  </div>
</div>

<script src="/js/create-image-manipulation.js"></script>
<script src="/js/validation.js"></script>