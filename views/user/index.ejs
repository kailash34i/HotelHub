<% i = 1 %>

<div class="row justify-content-center gap-3">
  <% for(let hotel of allHotels) { %>
  <div class="card hotel-card col-3">
    <a href="/explore/<%= hotel._id %>">
      <% if(hotel.ratingAvg >= 4.5 && hotel.reviews.length > 5 ) { %>
      <span class="badge text-bg-dark trending-badge"><i class="fa-solid fa-fire me-1"></i>Popular</span>
      <% } %>

      <!-- Carousel for card image -->

      <div id="carouselExampleInterval<%= i %>" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item hotel-carousel active" data-bs-interval="3000">
            <img src="/uploads/<%= hotel.image[0] %>" class="card-img-top" alt="hotel-image.">
          </div>
          <div class="carousel-item hotel-carousel" data-bs-interval="3000">
            <img src="/uploads/<%= hotel.image[1] %>" class="card-img-top" alt="hotel-image">
          </div>
          <div class="carousel-item hotel-carousel" data-bs-interval="3000">
            <img src="/uploads/<%= hotel.image[2] %>" class="card-img-top" alt="hotel-image">
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval<%= i %>" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval<%= i %>" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <h5 class="card-hotel-name"><b><%= hotel.hotelName %></b></h5>
          <% if(hotel.ratingAvg != 0) { %>
          <p class="card-text">
            <span class="badge text-bg-danger me-1">
              <i class="fa-solid fa-star me-1"></i><%= hotel.ratingAvg.toFixed(1) %>
            </span>
          </p>
          <% } %>
        </div>

        <p class="card-text mt-1">
          <i class="fa-solid fa-location-dot" style="margin-left: 1px; margin-right: 5px"></i>
          <%= hotel.location %>,&nbsp; <%= hotel.country %>
        </p>

        <!-- Print price in the card -->
        <% if(hotel.rooms.length === 1) { %>
        <p class="card-text mt-3">
          &#8377;&nbsp;&nbsp;<b><%= hotel.rooms[0].price.toLocaleString('en-IN') %>&nbsp;/night</b>
        </p>
        <% }else { %>
        <!-- Lowest and highest price finding -->
        <% let prices = [] %>
        <% for(let room of hotel.rooms) { %>
        <% prices.push(room.price) %>
        <% } %>
        <% const min = Math.min(...prices); %>
        <% const max = Math.max(...prices); %>

        <p class="card-text mt-3">
          &#8377;&nbsp;&nbsp;<b><%= min.toLocaleString('en-IN') %> - <%= max.toLocaleString('en-IN') %>&nbsp;/night</b>
        </p>

        <% } %>
      </div>
    </a>
  </div>

  <% i++ %>
  <% } %>
</div>